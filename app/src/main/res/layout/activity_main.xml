<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etNum"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@+id/etOp"
            android:layout_marginBottom="11dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCalc" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/btnCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCalc"
            app:layout_constraintTop_toBottomOf="@+id/etNum" android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp" android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tvResultado" app:layout_constraintBottom_toTopOf="@+id/tvResultado"/>
    <TextView
            android:layout_width="137dp"
            android:layout_height="0dp" android:id="@+id/tvResultado"
            app:layout_constraintTop_toBottomOf="@+id/btnCalc" android:layout_marginBottom="235dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etNum2"
            android:importantForAutofill="no"
            android:layout_marginTop="222dp" android:layout_marginBottom="22dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/etOp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="91dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etOp"
            app:layout_constraintTop_toBottomOf="@+id/etNum2"
            android:layout_marginBottom="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etNum" app:layout_constraintStart_toStartOf="parent"
            android:importantForAutofill="no"/>
    <TextView
            android:text="@string/textExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textExplain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="37dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>